{{#if currentUser}}
{{> header }}
{{else}}
{{> anonHeader}}
{{/if}}
<div data-recipeid={{recipe._id}}>

<div class="container">

<div class="search-row recipe-box">


  <div class="col-md-4">
    <div class="back-btn">
    {{#if fromCookbook}}
      <a class="back-to-cookbook">&lt; Back to Cookbook</a>
      {{else}}
      <a class="back-to-search">&lt; Back to Search Results</a>    
    {{/if}}
  </div>

    <div class="recipe-view-img" style="background-image: url({{recipe.imageURLs.[0]}})"></div>

    <form id="scale-form" class="form-inline" data-recipeid={{recipe._id}}>
       <div class="serving-line">Serving size: <input class="form-control" id="serv-size-input" value={{recipe.servingSize}} type="number" name="servingsize" />
       <input type="submit" value="Scale Recipe" class="btn btn-warning"/></div>
     </form>



    <div class="recipe-name">{{recipe.name}}</div>
    {{#if displayButton}}
    <div class="save-recipe-btn">
      <button id="save-btn" data-id={{recipe._id}} data-servingsize={{recipe.servingSize}} class="btn btn-lg btn-warning save-btn">Save Recipe to Cookbook</button>
    </div>
    {{/if}}
  </div>



  <div class="col-md-6 col-md-offset-1">
    <div class="ingredients">
      <div class="ingredients-header">Ingredients: </div>
      
      {{#each recipe.ingredients}}
        <div class="ingredient">{{ this }}</div>
      {{/each}}
    </div>

    <div class="instructions">
      <div class="instructions-label">Instructions:</div>
      <a class="recipe-url btn btn-lg btn-warning save-btn" href="{{recipe.sourceURL}}">Full instructions here</a>
    </div>

    <div class="rating">
      <div class="display-rating">This recipe is rated {{recipe.rating}} stars</div>
    <form id="rating-form" class="form-inline" data-recipeid={{recipe._id}} data-servingsize={{recipe.servingSize}} data-displaybutton={{displayButton}}>
       <div class="serving-line">Rate this recipe: <input class="form-control" id="rating-input" value={{recipe.rating}} type="number" name="rating" />
       <input type="submit" value="Rate" class="btn btn-warning"/></div>
     </form>
   </div>
  </div>





</div>

</div>
</div>