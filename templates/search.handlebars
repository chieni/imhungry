{{> header }}

<div class="container">
  <div class="search-row">
  
    <div class="col-md-8 left">
      <h1>Find recipes.</h1>

      <form id="search-form" class="form-inline">
       <div class="serving-line">Serving size: <input class="form-control" id="serv-size-input" type="number" name="servingsize"/>
       <input type="submit" value="SCAVENGE" class="btn btn-warning"/></div>
     </form>

     <div class="error">
      {{#if error}}
      {{error}}
      {{/if}}
    </div>

    <div class="results">
      {{#if searched}}
      {{#each recipes}}
      {{> recipe size=../size}}
      {{else}}
      <p><em>No recipes found.</em></p>
      {{/each}}
      {{/if}}
    </div>
  </div>

  <div class="col-md-3 col-md-offset-1 right">
    <h1>{{currentUser}}'s pantry.</h1>
    <div id="ingredientsList">
      {{#each ingredients}}
      <div class="ingredients-line">
        <span class="delete-button" style="color:orange;">x</span><span class="ingredient" data-ingredient-id={{this._id}}>{{ this.name }}</span>
      </div>
      {{else}}
      <p><em>No ingredients yet!</em></p>
      {{/each}}
    </div>

    <form id="pantry-form" class="form-inline">
      <div><input class="form-control" id="new-ingredient" name="ingredient" type="text" autocomplete="off" placeholder="Add a new ingredient" required /><input type="submit" value="ADD" class="btn btn-warning" id="add-ing-btn"/></div>
           <div><ul id="results-list" style="list-style-type:none"></ul></div>
      </form>
    </div>
  </div>
